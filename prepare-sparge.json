{
  "name": "Prepare sparge",
  "description": "Get mash tun ready to sparge and Lauter grains",
  "steps": [
    {
      "id": 1,
      "_comment": "Disable mash recirculate overflow monitor",
      "deviceId": "MO-2",
      "eventType": "OFF"
    },
    {
      "id": 2,
      "_comment": "Stop mash pump",
      "deviceId": "DO-7",
      "eventType": "OFF"
    },
    {
      "id": 3,
      "_comment": "Open boiler valve",
      "deviceId": "DO-5",
      "eventType": "ON"
    },
    {
      "id": 4,
      "_comment": "Wait for valve to open",
      "deviceId": "TI-1",
      "eventType": "WAIT_TIME",
      "value": 3
    },
    {
      "id": 5,
      "_comment": "Enable sparge overflow/pump",
      "deviceId": "MO-3",
      "eventType": "ON"
    },
    {
      "id": 6,
      "_comment": "Wait for sparge water to sit on top of grain",
      "deviceId": "DI-1",
      "eventType": "WAIT_ON"
    }
  ]
}
